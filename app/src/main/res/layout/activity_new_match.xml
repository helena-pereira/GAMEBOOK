<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helena.gamebook.NewMatch">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow>
            <TextView
                android:text="@string/newMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idNameMatch"
                android:textSize="36sp"
                tools:textAlignment="center" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LabelDate"
                android:layout_weight="1" />

            <!--c'est un champ spécialement pour sélectionner les dates-->
            <DatePicker
                android:layout_width="274dp"
                android:ems="10"
                android:layout_height="wrap_content"
                android:id="@+id/idDate"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LabelHeure"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="274dp"
                android:ems="10"
                android:layout_height="wrap_content"
                android:id="@+id/idHeure"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/stade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LabelStade"
                android:layout_weight="1" />

            <EditText
                android:layout_width="274dp"
                android:ems="10"
                android:layout_height="wrap_content"
                android:id="@+id/idStade"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/resident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LabelResident"
                android:layout_weight="1" />

            <EditText
                android:layout_width="274dp"
                android:ems="10"
                android:layout_height="wrap_content"
                android:id="@+id/idResident"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/visiteur"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/LabelVisiteur"
                android:layout_weight="1" />

            <EditText
                android:layout_width="274dp"
                android:ems="10"
                android:layout_height="match_parent"
                android:id="@+id/idVisiteur"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/statut"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/LabelStatut"
                android:layout_weight="1" />

            <TextView
                android:text="@string/quantite"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/LabelQuantite"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/idStatut"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/idQuantite"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCancel"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:onClick="toListMatch"
                />
            <!--Etes vous sûre de vouloir supprimer le match?-->

            <Button
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEdit"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:onClick="toTheMatch"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
