<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helena.gamebook.NewMatch">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow
            android:gravity="center_horizontal">
           <TextView
                android:text="@string/newMatch"
               style="@style/title"
                android:id="@+id/idNameMatch"
               />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/date"
                android:id="@+id/LabelDate"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:id="@+id/idEditDate"
                android:layout_weight="1"
                style="@style/textView"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/heure"
                android:id="@+id/LabelHeure"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:id="@+id/idHeure"
                android:layout_weight="1"
                style="@style/textView"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/stade"
                android:id="@+id/LabelStade"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:id="@+id/idStade"
                android:layout_weight="1"
                style="@style/textView" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/resident"
                android:id="@+id/LabelResident"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:id="@+id/idResident"
                android:layout_weight="1"
                style="@style/textView"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/visiteur"
                android:id="@+id/LabelVisiteur"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:layout_height="match_parent"
                android:id="@+id/idVisiteur"
                android:layout_weight="1"
                style="@style/textView"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/quantite"
                android:id="@+id/LabelQuantite"
                android:layout_weight="1"
                style="@style/textView"
                android:textStyle="bold"/>

            <EditText
                android:ems="10"
                android:id="@+id/idQuantite"
                android:layout_weight="1"
                style="@style/textView"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="@string/cancel"
                style="@style/button_cancel"
                android:id="@+id/buttonCancel"
                android:onClick="toListMatch"
                />
            </TableRow>

        <TableRow>
            <Button
                android:text="@string/register"
                style="@style/button_save"
                android:id="@+id/buttonEdit"
                android:onClick="onClickRegister"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
